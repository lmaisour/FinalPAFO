		<p>
			<%= f.label :drink %><br />
			<%= f.text_field :drink %>
		</p>
		<p class="button"><%= f.submit %></p>
		<% end %>
	</div>
	<%= link_to "Delete This Event", :event, method: :delete %>

	<br>
	<%= link_to "back to the list of events!", events_path %>

</center>
