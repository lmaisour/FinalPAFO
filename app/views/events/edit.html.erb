		<% end %>
		<p>
			<%= f.label :name %><br />
			<%= f.text_field :name %>
		</p>
		<p>
			<%= f.label :place %><br />
			<%= f.text_field :place %>
		</p>
		<p>
			<%= f.label :when %><br />
			<%= f.text_field :when %>
		</p>
		<p>
			<%= f.label :price %><br />
			<%= f.text_field :price %>
		</p>
		<p>
			<%= f.label :short_description %><br />
			<%= f.text_field :short_description %>
		</p>
		<p>
			<%= f.label :description %><br />
			<%= f.text_field :description %>
		</p>
		<p>
			<%= f.label :starter1 %><br />
			<%= f.text_field :starter1 %>
		</p>
		<p>
			<%= f.label :starter2 %><br />
			<%= f.text_field :starter2 %>
		</p>
		<p>
			<%= f.label :starter3 %><br />
			<%= f.text_field :starter3 %>
		</p>
		<p>
			<%= f.label :entree1 %><br />
			<%= f.text_field :entree1 %>
		</p>
		<p>
			<%= f.label :entree2 %><br />
