<h1>REGISTRATION</h1>

<center>
	<div class = "newusercontainer">
		<div class="signupform">
			<%= form_for @user, {url: session_path } do |f| %>
			<% if @user.errors.any? %>
			<div class="error messages">
				<h2>Form is Invalid</h2>
				<ul>
					<% for message in @user.errors.full_messages %>
					<li><%= message %></li>
					<% end %>
				</ul>
			</div>
			<% end %>
			<p class="signupfield">
				<%= f.label :email %><br />
				<%= f.text_field :email %>
			</p>
			<p class="signupfield">
				<%= f.label :password %><br />
				<%= f.password_field :password %>
			</p>
			<p class="button"><%= f.submit %></p>
		</div>
	</div>
	<% end %>

</center>
