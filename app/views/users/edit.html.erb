<div class="container" style="padding-top: 60px;">


  <h1 class="page-header">Edit Profile</h1>
  <div class="row">
  	<%= form_for @user, html: { class: 'form' } do |f| %>
    <!-- left column -->
    <div class="col-md-4 col-sm-6 col-xs-12">
      <div class="text-center">
        <%= image_tag @user.image, size:"250x250" %>
        <h6>Upload a different photo...</h6>
        <%= f.file_field :image %> 
        <%= f.submit "Upload" %> 
      </div>
    </div>
    <!-- edit form column -->
    <div class="col-md-8 col-sm-6 col-xs-12 personal-info">
    	

      <h3>Edit Your Info</h3>
      <form class="form-horizontal" role="form">
        <div class="form-group">
          <%= f.label "First Name" %><br />
          <%= f.text_field :first_name, placeholder: "First Name", class: 'form-control' %>
        </div>
        <div class="form-group">
          <%= f.label :last_name %><br />
          <%= f.text_field :last_name, placeholder: "Last Name", class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.text_field :email, placeholder: "Email Address", class: 'form-control' %>
        </div>
        <div class="form-group">
          <label class="col-md-3 control-label"></label>
          <div class="col-md-8">
            <span></span>
          </div>
        </div>
      </form>


      <h1> Edit this User record and Event records together</h1>


      And here is some data from the event record that can be edited:<br><br>
      <%= f.collection_check_boxes :event_ids, Event.all, :id, :name %>
      <br><br>
      <%= f.submit "Save Changes", class: "btn btn-primary" %> 
      <% end %>

    </div>
  </div>
</div>

