<div class="container">
	<div class="row">
			<h1> User List </h1>
        <div class="span12">
    		<ul class="thumbnails">
    			<% @users.each do |s| %>
                  <div class="thumbnail clearfix">
                    <%= image_tag s.image, size:"150x150", class: "pull-left span2 clearfix" %>
                     <!-- <%= image_tag(s.image.url) %> -->
                    <div class="caption" class="pull-left">
                      
                    	<h3><%= s.first_name %> <%= s.last_name %></h3>

                      <button><%= link_to "Show more details!", user_path(s) %></button>
                    </div>
                  </div> 
                  <% end %>              
            </ul>
        </div>
	</div>
</div>
